<iframe class="z-0 h-full w-full" src='https://my.spline.design/bandingcopy-911fb32df568877dfd6accf77c314a29/' frameborder='0'>
</iframe>
<div class="card w-96 mt-4 glass z-10 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
  <figure><img class="w-20 mt-4" src="/images/ironhub_nobg.png" alt="Ironhub"></figure>

  <div class="card-body">
    <p class="block mb-2 text-md font-medium  dark:text-gray-300 text-center text-white">Hello, {{currentUser.username}}</p>

<form action="/projects/{{project._id}}/edit-project" method="POST" enctype='multipart/form-data'>

     <label class="block mb-2 text-sm font-medium  dark:text-gray-300 text-center text-white" for="title">Title</label>
      <input class="input input-bordered w-full max-w-xs mt-1 text-center opacity-95" type="text" name="title" value="{{project.title}}">
   
   <label class="block mt-4 text-sm font-medium  dark:text-gray-300 text-center text-white" for="description"> Description</label>
      <input class="input input-bordered w-full max-w-xs mt-4 text-center opacity-95" type="text" name="description" value="{{project.description}}">

   <label class="block mt-4 text-sm font-medium  dark:text-gray-300 text-center text-white" for="link">Link</label>
      <input class="input input-bordered w-full max-w-xs mt-4 text-center opacity-95" type="text" name="link" value="{{project.link}}">

      <label class="block mb-4 mt-4 text-sm font-medium  dark:text-gray-300 text-center text-white" for="image">Image</label>
<input class="block w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 cursor-pointer dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" id="multiple_files" type="file" name="image">
   <div class="card-actions justify-center">

   <button class="btn btn-sm btn-wide text-white btn-outline mt-6" type="submit">Edit Project</button>
   </div>

</form>
   <div class="card-actions justify-center">
   <a href="/projects/{{projectid}}/delete-project/"><button class="btn btn-sm btn-wide text-white btn-outline mt-6" type="submit">Delete Project</button></a>
   <a href="/{{currentUser.username}}/projects"><button class="btn btn-sm btn-wide text-white btn-outline mt-6" type="submit">Back to profile</button></a>
   </div>
   </div>

{{#if errorMessage}}
<div id="alert-additional-content-2" class="p-2 mb-5 border border-red-200 rounded-lg bg-red-50 dark:bg-red-200" role="alert">
  <div class="mt-2 mb-4 text-sm text-red-900 dark:text-red-800 text-center">
    {{errorMessage}}
    <p class="mt-2 mb-4 text-sm text-red-900 dark:text-red-800 text-center">Please, reload the page</p>
  </div>
</div>
{{/if}}

</div>
</div>

