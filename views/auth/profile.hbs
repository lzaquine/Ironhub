<button><a href="/search">Search</a></button>
<button><a href="/profile/{{username}}">Profile</a></button>
<button><a href="/auth/logout">Logout</a></button>

<img src="{{profilepicture}}" alt="{{course}}">
<h1>Hello {{username}}</h1>

<div class="about-me">
<h4>About me</h4>
<p>Name: {{name}}</p>
<p>Surname: {{surname}}</p>
<p>Campus: {{campus}}</p>
<p>Course: {{course}}</p>
<p>Location: {{location}}</p>
<p>Email: {{email}}</p>
<p>Website: <a href="//{{website}}" target='_blank'>{{website}}</a></p>
<p>Linkedin: <a href="//{{linkedin}}" target='_blank'>{{linkedin}}</a></p>
<p>Instagram: <a href="//{{instagram}}" target='_blank'>{{instagram}}</a></p>
</div>

<div class="bio">
<h4>Bio:</h4>
<p>{{bio}}</p>
</div>

    {{#ifEquals username currentUser.username}}
<button><a href="/profile/{{username}}/edit-profile">Edit Profile</a></button>

<button><a href="/{{username}}/projects/new">Add Project</a></button>
{{/ifEquals}}
<button><a href="/{{username}}/projects">Projects</a></button>
<button><a href="/">Back</a></button>